<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_WHITE"
    >
    <LinearLayout
        android:id="@+id/fourth_fragment_profile"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/entire_border"
        android:gravity="left|center_vertical"
        >
        <ImageView
            android:id="@+id/fourth_fragment_profile_Item_Image"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/main_friend_basic_icon" />

        <LinearLayout
            android:id="@+id/fourth_fragment_profile_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/main_chat_room_recyclerview_user_name"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_Black"
                />
            <TextView
                android:id="@+id/main_chat_room_recyclerview_user_tel"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_Gray"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fourth_fragment_location"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fourth_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_main"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:gravity="center_horizontal"
    >
    <ImageButton
        android:id="@+id/main_configure_developer_dialog_exit_btn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:background="@drawable/x_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        />

    <TextView
        android:text="HIFLY"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        app:srcCompat="@drawable/hifly"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:textColor="@color/color_Black"
        android:text="Copyright"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/color_Gray"
        android:layout_marginTop="10dp"
        android:text="Kim Jun Hee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/color_Gray"
        android:text="Choi Young Suck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/color_Gray"
        android:text="Yoon Seong Won "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Call FeedBack 010-2200-1646"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>